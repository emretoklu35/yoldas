generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String @default("user")

  resetToken       String? // ğŸ’¡ geÃ§ici token alanÄ±
  resetTokenExpiry DateTime? // ğŸ’¡ token sÃ¼resi (opsiyonel ama Ã¶nerilir)
}
